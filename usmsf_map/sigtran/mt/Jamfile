SubDir TOP sigtran mt ;
SubDirHdrs $(TOP)/inc $(TOP)/inc/MMDB $(UALIB_SRC_HOME)/include 
	$(ULIB_SRC_HOME)/include $(USRG_ROOT)/include $(UXLIB_SRC_HOME)/include $(UDIA_SRC_HOME)/include ;
SubDirHdrs $(UANGIN_SRC_HOME)/include ;
SubDirHdrs $(MMDB_SRC_HOME)/include ;
SOURCES = mt mt_resq resq handshakelist ;

TARGET = sigmt ;
Main $(TARGET) : $(SOURCES).c ;

if $(OSPLAT) = ia64 {
	LINKLIBS on $(TARGET) = -Wl,+s,+compat -L$(UASYS_HOME)/lib -lsys_lib -lGCA -lMSG -lRPDU -lUTIL -lSigTrace -luxlib
		-lSS7 -lsigtran_util -lOSSASN $(OSS_LIB)
		-lua_common
		-L$(USRG_ROOT)/lib -lutcap ;
} else {
	LINKLIBS on $(TARGET) = -L$(UASYS_HOME)/lib -lsys_lib -lGCA -lRPDU -lUTIL -lMSG -luxlib -lsigcommon
		-lSS7 -lsigtran_util -lOSSASN $(OSS_LIB) -lua_common -L$(USRG_ROOT)/lib -lutcap -lulib -ldl ;
}

LOCAL_DEFINES = -DUSE_CPPLIB=1 -D_MODULE_NAME='\"$(TARGET)\"' -D_PSTAT64  -DUSIGTRAN ;

# .c -> .o compile option
ObjectCcFlags $(SOURCES)$(SUFOBJ) : $(LOCAL_DEFINES) $(SYS_CCFLAGS) ;

InstallBin $(SMSC_HOME)/bin : $(TARGET) ;
CopySysFile $(TARGET) : $(TOP)/bin ;

SOURCES = seeHsList ;
TARGET =  seeHsList ;
Main $(TARGET) : $(SOURCES).c ;

LINKLIBS on $(TARGET) = -L$(UASYS_HOME)/lib -lsys_lib -lua_common -ldl ;

# .c -> .o compile option
ObjectCcFlags $(SOURCES)$(SUFOBJ) : $(LOCAL_DEFINES) $(SYS_CCFLAGS) ;

InstallBin $(SMSC_HOME)/bin : $(TARGET) ;
CopySysFile $(TARGET) : $(TOP)/bin ;
